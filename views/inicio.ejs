<script>
    document.addEventListener('DOMContentLoaded', function() {
        fetch('/api/carrusel_img')  // Endpoint para obtener las imágenes del carrusel
            .then(response => response.json())
            .then(images => {
                const carouselImagesDiv = document.querySelector('.carousel-images');
                images.forEach(image => {
                    const imgElement = document.createElement('img');
                    imgElement.src = image.url_Img;
                    imgElement.alt = 'Carrusel Image';
                    carouselImagesDiv.appendChild(imgElement);
                });

                const totalImages = images.length;
                let currentIndex = 0;
                const intervalTime = 5000; // Tiempo en milisegundos (8 segundos)

                function showNextImage() {
                    currentIndex = (currentIndex + 1) % totalImages;
                    const offset = -currentIndex * 100;
                    carouselImagesDiv.style.transition = 'transform 1s ease-in-out'; 
                    carouselImagesDiv.style.transform = `translateX(${offset}%)`;
                }

                setInterval(showNextImage, intervalTime); 
            })
            .catch(error => console.error('Error al cargar las imágenes del carrusel:', error));
    });
</script>


