<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Agregar productos</title>
    <link rel="stylesheet" href="/resources/css/styles.css" />
  </head>
  <body>
    <div class="contenedor">
      <div class="contenedor__img">
        <img style="background-color: transparent; border-style: none; cursor: pointer;" src="/resources/assets/cerrar.png" id="btn_regreso" class="contenedor__img--cierre"
        />
      </div>
      <div><img src="/resources/assets/img1.png" /></div>
      <div class="items">
        <form action="/productos" method="post" enctype="multipart/form-data">
        <label for="">
          Producto:
          <input  requiered class="" type="text" placeholder="Producto" name="nombre_Produc" id="nombre_Produc" required/>
        </label>
      </div>
      <div class="items">
        <label>
          Descripcion:
          <input requiered class="" type="text" placeholder="Descripcion" name="desc_Produc" id="desc_Produc" />
        </label>
      </div>
      <div class="items">
        <label>
          Precio:
          <input requiered class="" type="number" placeholder="$" name="precio" id="precio"/>
        </label>
      </div>
      <div class="items">
        <label>
          Categoria:
          <select name="id_Categoria">
            <option value="1">Accesorio</option>
            <option value="2">Refacci√≥n</option>
          </select>
        </label>
      </div>
      <div class="items">
        <label>
          Imagen:
          <input required type="file" name="imagen_producto" id="imagen_producto" accept="image/*" >
        </label>
      </div>
      <button class="button">Guardar</button>
     
    </div>
  </form>
  </body>

  <script>
    document.getElementById('btn_regreso').addEventListener('click',function(){
      window.location.href = '/utilidades_admin/vistacrud';
    })
  </script>
  
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>

  <% if (typeof alert != "undefined")  { %>
    <script>
    Swal.fire({
      title:'<%= alertTitle %>',
      text:'<%= alertMessage %>',
      icon:'<%= alertIcon %>',
      showConfirmButton: <%= showConfirmButton %>,
      timer: <%= timer %>
    }).then(()=>{
      window.location.href='<%= ruta %>'
    })
    </script>
  <% } %>
</html>