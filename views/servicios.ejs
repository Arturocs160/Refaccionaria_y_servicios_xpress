<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/resources/css/global.css">
    <link rel="stylesheet" href="/resources/css/servicios.css">
    <title> Servicios</title>
</head>
<body>
    <header>
        <img src="/resources/assets/logo.png" alt="logo Refaccionaría y servicios Xpress">
        <input type="checkbox" id="check">
        <label for="check" class="mostrar-menu">
            &#8801
        </label> 
         <nav class="menu">
            <a href="/">Inicio</a>
            <a href="/servicios">Servicios</a>
            <a href="/cita">Cita</a>   
            <a href="/productos">Productos</a>
            <a href="/nosotros">Nosotros</a>
            <a href="/contacto">Contacto</a>
        <label for="check" class="esconder-menu">
            &#215
        </label>
    </nav>
    </header>
    <div class="nombresec">
        <h1>Servicios</h1>
    </div>
    <div class="container">
        <div class="catalogo"> 
        <div class="cards-container" id="servicios-lista"></div>
        </div>   
        
    </div>
    
        <div class="boton"><button id="rojo"><a href="./agendar">Agendar cita</a></button></div>
        <footer>
            <div class="contacto">
                <p>Contacto </p>
                <p>Telefono</p>
                <p>correo electronico</p>
            </div>
            <div class="redes">
                <p>Siguenos: </p>
                <img src="/resources/assets/facebook.png" alt="">
                <img src="/resources/assets/instagram.png" alt="">
                <img src="/resources/assets/twitter.png" alt="">
                <img src="/resources/assets/youtube.png" alt="">
            </div>
        </footer>
        <script>
            fetch('/api/servicios')
       .then(response => response.json())
       .then(servicios => {
           const serviciosLista = document.getElementById('servicios-lista');
           servicios.forEach(servicios => {
               const serviciosCard = document.createElement('div');
               serviciosCard.className = 'card';
               serviciosCard.innerHTML = `
                   <h2>${servicios.nombre_Servicio}</h2>
                   <p>Descripción: ${servicios.desc_Servicio}</p>
                   <p>Precio: $${servicios.precio}</p>
                   <img src="${servicios.url_Img}" alt="Imagen del servicio">
               `;
               serviciosLista.appendChild(serviciosCard);
           });
       })
       .catch(error => console.error('Error fetching productos:', error));
         </script>
</body>
</html>

